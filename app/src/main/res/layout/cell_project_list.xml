<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cell_tv_proj_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:text="Balipokhari AWC Building"
            android:textColor="#364F6B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cell_tv_proj_fy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cell_tv_proj_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="FY : 2021 - 2022"
            android:textColor="#364F6B"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cell_tv_scheme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANREGA"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="bottom"/>
            <TextView
                android:layout_below="@+id/cell_tv_scheme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scheme"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>